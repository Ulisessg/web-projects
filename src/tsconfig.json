{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/styles/*": [
        "styles/*"
      ],
      "@/atoms/*": [
        "atoms/*"
      ],
      "@/molecules/*": [
        "molecules/*"
      ],
      "@/organisms/*": [
        "organisms/*"
      ],
      "@/templates/*": [
        "templates/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/pagesStyles/*": [
        "pagesStyles/*"
      ],
      "@/props": [
        "./types/props"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}