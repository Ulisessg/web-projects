@import '../variables.styl'
.section
  margin: 4rem 0
  text-align: center
  background-color: background-light
  height 30vh
  border-radius: 20px
  & .title
    color: color-dark
    padding-top: 10px
  & .description
    margin: 13px
    margin-top: 10px
    text-align: center
    color color-dark
  &__details
    height 90%
    display flex
    flex-direction: column
    justify-content: space-around