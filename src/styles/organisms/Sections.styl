@import '../variables.styl'
.sections
  display grid
  justify-items: center
  margin-top: 10vh
.section
  margin: 1rem 0
  text-align: center
  background-color: background-light
  height 30vh
  border-radius: 20px
  box-shadow: 0 0 8px 0px #6c8eff
  @media screen and (min-width 750px)
    width: 80%
    margin: 1rem 0
.section__details
  height 90%
  display flex
  flex-direction: column
  justify-content: space-around
.section__details--title
  color: color-dark
  padding-top: 10px
.section__details--description
  margin: 13px
  margin-top: 10px
  text-align: center
  color color-dark