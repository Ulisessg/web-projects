@import '../variables.styl'
.sections
  display grid
  justify-items: center
.section
  margin: 2rem 0
  text-align: center
  background-color: background-light
  height 30vh
  border-radius: 20px
  @media screen and (min-width 750px)
    width: 80%
    margin: 4rem 0
  .section__details
    height 90%
    display flex
    flex-direction: column
    justify-content: space-around
  .section__details--title
    color: color-dark
    padding-top: 10px
  .section__details--description
    margin: 13px
    margin-top: 10px
    text-align: center
    color color-dark