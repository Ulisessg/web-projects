@import '../variables.styl'

.sections
  width: 90vw
  margin-top: 50px
  @media screen and (min-width 700px)
    display: -ms-grid
    display: -moz-grid
    display: grid
    grid-template-columns: 1fr 1fr
    grid-column-gap: 40px
    -ms-grid-column:  1fr 1fr
  @media screen and (min-width 1200px)
    grid-template-columns: 1fr 1fr 1fr 1fr
.section--container
  width: 100%
  justify-content: space-between
  display: -ms-flexbox
  display: -webkit-flex
  -ms-flex-direction: column
  flex-direction: column
  margin-bottom: 40px
  align-items: center
  border: 2px solid black
  border-radius: 10px
  box-shadow: 0px 2px 8px 0px box-shadow

.section-img-container
  padding: 15px
  width 100%
  height: auto
.section--img
  width: 100%
  height: auto
  object-fit: cover
  -o-object-fit: cover
  border-radius: 20px
.section--title
  text-align: -webkit-center
  margin: 15px 0px
.section--description
  width 90%
  text-align: -webkit-left
.section--link
  border-radius: 15px
  display: -ms-flexbox
  display: -webkit-flex
  justify-content: center
  align-items: center
  margin: 30px 0px
  width: 90%
  height: 50px
  text-align: -webkit-center
  background-color: button-color
  color: white
.section--link:hover, .section--link:focus
  background-color: background-dark
