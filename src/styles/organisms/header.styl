header
  width: 100vw
  display: flex
  height 15vh
  background-color: #e1a222
  nav
    width: 100%
    height 100%
    ul
      height 100%
      width: 100%
      display flex
      justify-content: space-around
      li
        align-self: center
      & a
        font-size: 12px
        color: #0c0b0b
        @media screen and (max-width: 300px)
          font-size: 10px
        @media screen and (min-width: 400px)
          font-size: 14px
        @media screen and (min-width: 700px)
          font-size: 20px

.skip-links
  position: absolute
  left: -999px
  width:1px
  height: 1px
  top: auto
  color: black
  background-color: #ffffff
  &:focus
    color: black;
    display: inline-block;
    height: auto;
    width: auto;
    position: static;
    margin: auto;

  