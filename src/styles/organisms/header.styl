@import '../variables.styl'
.header
  width: 100vw
  display: flex
  height 17vh
  background-color: background-light
  box-shadow: 0 1px 6px 0px box-shadow
.header__nav
  width: 100%
  height 100%
.header__ul
  height 100%
  width: 100%
  display flex
  justify-content: space-around
.ul__li
  align-self: center
.ul__li--a
  font-size: 12px
  color: color-ligth
  @media screen and (max-width: 300px)
    font-size: 10px
  @media screen and (min-width: 400px)
    font-size: 14px
  @media screen and (min-width: 700px)
    font-size: 20px

  