@import '../variables.styl'
.header
  width: 100vw
  display: flex
  height 13vh
  background-color: background-dark
  box-shadow: 0px 3px 8px 0px box-shadow
  & a
    display: flex
  &__logo--link:focus, &__logo--link:hover
    .header__logo--img
      border 1px solid white
  &__logo--img
    height: 50px
    width: 50px
    align-self: center
    margin-left: 10px
    @media screen and (max-width 360px)
      width: 40px
      height: 40px
    @media screen and (orientation landscape)
      width: 40px
      height: 40px