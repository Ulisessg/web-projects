@import '../variables.styl'

.skip-link
  background-color: background-light

.skip-link--link
  position absolute
  top: -1200px

.skip-link--link:focus
  top: 0
  position relative
  color: white
  font-size: 2em
  background-color: background-contrasting
  display inline-block
  height 2em
  width 12em
  padding-top: 0.5em
  text-align: center