@import '../variables.styl'

.nav
  width: 100%
  height 100%
.nav__ul
  height 100%
  width: 100%
  display flex
  justify-content: space-around
.ul__li
  align-self: center
.ul__li--a
  cursor: pointer
  color: color-ligth
  display inline-block
  text-align: center
  font-size: unity * 2
  @media screen and (max-width: 300px)
    font-size: unity  0.5
    width auto
  @media screen and (min-width: 400px)
    font-size: unity * 2
    width auto
  @media screen and (min-width: 700px)
    font-size: unity * 2
    width unity * 14

.ul__li--a-ligth:hover,
.ul__li--a-ligth:focus
  border: 1px solid background-dark !important
  border-radius: 20px
  padding: 5px
  border 2px solid color-ligth
  width unity * 14
  @media screen and (max-width: 700px)
    width: unity * 8
    height unity * 3
    font-size: unity * 2
    text-align: center
  

