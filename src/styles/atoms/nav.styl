@import '../variables.styl'

.nav
  width: 100%
  height 100%
.nav__ul
  height 100%
  width: 100%
  display flex
  justify-content: space-around

.ul__li
  align-self: center

.ul__li--a
  // On focus padding is less and border width replace them
  cursor pointer
  color: color-ligth
  text-align: center
  font-size: 1.5rem
  padding: 7px 30px
  @media screen and (max-width: 450px)
    padding: 7px 20px

.ul__li--a:focus,
.ul__li--a:hover
  padding: 5px 28px
  border: 2px solid color-ligth
  width auto
  border-radius: 20px
  @media screen and (max-width: 450px)
    padding: 7px 18px

.ul__li--a-ligth
  color: color-ligth
  background-color: color-highlight
  text-align: center
  border-radius: 20px
  padding: 10px 15px

.ul__li--a-ligth:hover,
.ul__li--a-ligth:focus
  background-color: background-contrasting
  border: 2px solid box-shadow
  padding: 8px 13px
  @media screen and (max-width: 450px)
    padding: 7px 18px

.ul__li--a-dark:hover,
.ul__li--a-dark:focus
  background-color: color-highlight

