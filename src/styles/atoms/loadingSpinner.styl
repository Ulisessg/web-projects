@import '../variables.styl'

.loading-spinner--container
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items:  center

.loading-spinner
  width: 45px
  height: 45px
  border-radius: 50%
  border: 4px solid rgba(0,0,0,0.1)
  border-left: 4px solid background-dark
  animation: spin 0.8s linear infinite


@keyframes spin {
  100% {
    transform: rotate(360deg)
  }
}