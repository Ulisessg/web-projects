@import '../variables.styl'
.linkedin-badge
  width: 100%
  height: 400px
  margin-top: 50px
  display: flex
  flex-direction: column
  background-color: aliceblue
  align-items: center
  text-align: center
  justify-content: space-between
  padding-bottom: 15px


.linkedin-badge--name
  color: black


.linkedin-badge--name:hover,
.linkedin-badge--name:focus
  color white

.linkedin-badge > a:visited
  color: black


.linkedin-badge--background
  background-image: url(https://static-exp1.licdn.com/sc/h/856xpihrituhwdjrua9z5u5na)
  background-position: center
  margin: 0 auto
  width: 100%
  display: flex
  padding: 15px


.linkedin-badge--image
  border-radius: 100%
  width: 100px
  margin: 0 auto
  border: 4px solid white

.linkedin-badge--description
  padding 10px

.linkedin-badge--go-profile
  border: 1px solid background-contrasting
  padding: 3px
  & > a
    padding 7px
    font-size: 1.5rem
    color: background-contrasting
  & > a:hover,
  & > a:focus
    color black