{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/design",
        "destination": "/design.html"
      },
      {
        "source": "/blog",
        "destination": "/blog.html"
      }
    ],
    "redirects": [
      {
        "source": "/about.html",
        "destination": "/",
        "type": 301
      }
    ]
  }
}